# Application
APP_NAME=Parle
VERSION=1.0.0
DEBUG=True

# Server
HOST=0.0.0.0
PORT=8000

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://localhost

# Database
DATABASE_URL=postgresql://parle_user:parle_password@localhost:5432/parle

# JWT
SECRET_KEY=change-this-to-a-secure-random-string-min-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# File storage (local paths for development)
UPLOAD_DIR=/var/www/parle/uploads
AUDIO_DIR=/var/www/parle/audio
MAX_UPLOAD_SIZE=10485760
